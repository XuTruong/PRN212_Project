<Window x:Class="WPF.CreateBillWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Tạo Hóa Đơn Mới" Height="450" Width="800" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0 0 0 10">
            <TextBlock Text="Phòng:"/>
            <ComboBox x:Name="cbRoom" DisplayMemberPath="RoomName" SelectedValuePath="RoomId" Width="778"/>

            <TextBlock Text="Tháng (yyyy-MM):"/>
            <TextBox x:Name="MonthYearTextBox"/>

            <TextBlock Text="Chỉ số điện cũ:"/>
            <TextBox x:Name="ElectricityOldTextBox"/>

            <TextBlock Text="Chỉ số điện mới:"/>
            <TextBox x:Name="ElectricityNewTextBox"/>

            <TextBlock Text="Chỉ số nước cũ:"/>
            <TextBox x:Name="WaterOldTextBox"/>

            <TextBlock Text="Chỉ số nước mới:"/>
            <TextBox x:Name="WaterNewTextBox"/>

            <TextBlock Text="Đơn giá điện:"/>
            <TextBox x:Name="ElectricityRateTextBox"/>

            <TextBlock Text="Đơn giá nước:"/>
            <TextBox x:Name="WaterRateTextBox"/>
        </StackPanel>

        <Button Grid.Row="2" Content="Tạo Hóa Đơn" Height="30" HorizontalAlignment="Center" Width="150"
                Click="CreateBillButton_Click"/>
    </Grid>
</Window>
