<Window x:Class="WPF.CreateContract"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="Tạo Hợp Đồng" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <!-- Chọn phòng -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Phòng: " Width="100" VerticalAlignment="Center"/>
                <ComboBox x:Name="cbRoom" Width="200" DisplayMemberPath="RoomName" SelectedValuePath="RoomId"/>
            </StackPanel>

            <!-- Người thuê chính -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Người thuê chính: " Width="100" VerticalAlignment="Center"/>
                <ComboBox x:Name="cbMainTenant" Width="200" DisplayMemberPath="DisplayInfo" SelectedValuePath="TenantId"/>
            </StackPanel>

            <!-- Ngày bắt đầu -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Ngày bắt đầu: " Width="100" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpStartDate" Width="200"/>
            </StackPanel>

            <!-- Ngày kết thúc -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Ngày kết thúc: " Width="100" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpEndDate" Width="200"/>
            </StackPanel>

            <!-- Tiền cọc -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Tiền cọc: " Width="100" VerticalAlignment="Center"/>
                <TextBox x:Name="txtDeposit" Width="200"/>
            </StackPanel>

            <!-- Ghi chú -->
            <TextBlock Text="Ghi chú:"/>
            <TextBox x:Name="txtNote" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>

            <!-- Nút tạo hợp đồng -->
            <Button Content="Tạo Hợp Đồng" Click="btnCreateContract_Click" Width="150" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>
