<Window x:Class="WPF.RoomManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý Phòng" Height="500" Width="900" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Grid.ColumnSpan="2" Text="Quản lý Phòng"
                   FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Danh sách phòng -->
        <Grid Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
            <DataGrid x:Name="dgRooms" AutoGenerateColumns="False"
                      CanUserAddRows="False" SelectionMode="Single"
                      SelectionChanged="dgRooms_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding RoomId}" Width="50"/>
                    <DataGridTextColumn Header="Tên Phòng" Binding="{Binding RoomName}" Width="150"/>
                    <DataGridTextColumn Header="Diện Tích" Binding="{Binding Area}" Width="100"/>
                    <DataGridTextColumn Header="Giá (VNĐ)" Binding="{Binding Price, StringFormat={}{0:N0} ₫}" Width="100"/>
                    <DataGridTextColumn Header="Trạng Thái" Binding="{Binding Status}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Thông tin phòng -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,0,0,0">
            <TextBlock Text="Tìm theo tên"/>
            <TextBox x:Name="txtSearch" TextChanged="txtSearch_TextChanged"/>

            <TextBlock Text="Thông tin phòng" FontWeight="Bold" FontSize="16" Margin="0,10,0,10"/>
            <TextBlock Text="Tên phòng"/>
            <TextBox x:Name="txtRoomName" Margin="0,0,0,10"/>

            <TextBlock Text="Diện tích (m²)"/>
            <TextBox x:Name="txtArea" Margin="0,0,0,10"/>

            <TextBlock Text="Giá phòng (VNĐ)"/>
            <TextBox x:Name="txtPrice" Margin="0,0,0,10"/>

            <TextBlock Text="Trạng thái"/>
            <ComboBox x:Name="cmbStatus" Margin="0,0,0,10">
                <ComboBoxItem Content="Available"/>
                <ComboBoxItem Content="Occupied"/>
            </ComboBox>
        </StackPanel>

        <!-- Các nút chức năng -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Thêm" Width="100" Click="btnAdd_Click" />
            <Button Content="Sửa" Width="100" Click="btnEdit_Click" />
            <Button Content="Xoá" Width="100" Click="btnDelete_Click"/>
            <Button Content="Làm mới" Width="100" Click="btnRefresh_Click"/>
        </StackPanel>
    </Grid>
</Window>
