<Window x:Class="WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản Lý Nhà Trọ"
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#f0f2f5">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadow"
                  Color="Black"
                  BlurRadius="10"
                  ShadowDepth="2"
                  Opacity="0.25"/>

        <!-- Style cho nút -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="10"
                                Effect="{StaticResource DropShadow}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Menu Chính"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#2c3e50"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>
            <WrapPanel HorizontalAlignment="Center">
                <Button Content="Phòng" Style="{StaticResource MenuButtonStyle}" Click="Room_Click"/>
                <Button Content="Người thuê" Style="{StaticResource MenuButtonStyle}" Click="Tenant_Click"/>
                <Button Content="Hợp đồng" Style="{StaticResource MenuButtonStyle}" Click="Contract_Click"/>
                <Button Content="Hóa đơn" Style="{StaticResource MenuButtonStyle}" Click="Invoice_Click"/>
                <Button Content="Thanh toán" Style="{StaticResource MenuButtonStyle}" Click="Payment_Click"/>
                <Button Content="Báo cáo" Style="{StaticResource MenuButtonStyle}" Click="Reports_Click"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
